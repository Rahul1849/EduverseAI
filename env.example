# Environment Variables
# Copy this file to .env.local and add your actual API keys

# OpenAI API Key for question generation and chat responses
OPENAI_API_KEY=your_openai_api_key_here

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: YouTube API Key for video recommendations
YOUTUBE_API_KEY=your_youtube_api_key_here

# Optional: Database URL for persistent storage
DATABASE_URL=your_database_url_here

# Optional: Vector database for RAG implementation
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
